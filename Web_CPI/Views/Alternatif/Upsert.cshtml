@model Alternatif

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Tambah Alternatif";
}

<body>
    <main>
        <section class="hero-section d-flex justify-content-center align-items-center" id="section_1">
            <div class="container">
                <div class="row">

                    <div class="col-lg-8 col-12 mx-auto">

                        <form method="post" class="custom-form mt-4 mb-lg-0 mb-5">
                            <div class="row p-3 border">

                                @if (Model.Id != 0)
                                {
                                    title = "Edit Alternatif";
                                }

                                <input type="hidden" asp-for="@Model.Id" />

                                <div asp-validation-summary="ModelOnly"></div>

                                <div class="col-12 border-bottom">
                                    <h2 style="color:white">@title</h2>
                                </div>
                                <div class="col-12 pt-4">
                                    <div class="form-group row">
                                        <div class="col-4">
                                            <label asp-for="NamaAlternatif"></label>
                                        </div>
                                        <div class="col-8">
                                            <input style="text-align:center" asp-for="NamaAlternatif" class="form-control" />
                                            <span asp-validation-for="NamaAlternatif" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <div class="col-4">
                                            <label asp-for="Alamat"></label>
                                        </div>
                                        <div class="col-8">
                                            <input style="text-align:center" asp-for="Alamat" class="form-control" />
                                            <span asp-validation-for="Alamat" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <div class="col-8 offset-4">
                                            @if (Model.Id != 0)
                                            {
                                                <partial name="_EditAndBackToListButton" model="Model.Id" />
                                            }
                                            else
                                            {
                                                <partial name="_CreateAndBackToListButton" />
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </section>
    </main>
</body>