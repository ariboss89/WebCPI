@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "List Penilaian";
}

<section>
    <main style="margin-top:100px">
        <div class="row">
            <div class="col-6">
                <h2 style="color: var(--primary-color)">@title </h2>
            </div>
            
        </div>

        <br />
        <div class="p-4 border rounded" style="text-align:center; margin-bottom:20px">
            <table id="tblData" class="table table-striped table-bordered" style="width:100%; padding-top:10px">
                <thead class="thead-dark">
                    <tr style="background-color: var(--secondary-color);color:white">

                        <th class="text-center">Id</th>
                        <th class="text-center">Nama Alternatif</th>
                        <th class="text-center">Nama Kriteria</th>
                        <th class="text-center">Nama SubKriteria</th>
                        <th class="text-center">Nilai</th>
                    </tr>
                </thead>
            </table>
        </div>

        <div class="row">
            <div class="col-6">
                <h2 class="text-primary"> </h2>
            </div>
            <div class="col-6 text-end">
                @*<input type="submit" class="btn btn-primary"asp-controller="Hasil" asp-route="Perhitungan" style="color:white"> &nbsp; Lakukan Pengambilan Keputusan <i class="bi bi-fast-forward-circle"></i></input>*@
                <div class="btn" style="background-color: var(--secondary-color);">
                    @Html.ActionLink("Lakukan Pengambilan Keputusan", "Perhitungan", "Keputusan", new { }, new { @style = "color:white" })

                    <i class="bi bi-fast-forward-circle"></i>

                </div>
            </div>
        </div>

    </main>
</section>

@section Scripts{
    <script src="~/js/keputusan.js"></script>
}
