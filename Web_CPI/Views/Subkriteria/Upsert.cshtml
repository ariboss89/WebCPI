@model Web_CPI.ViewModel.SubkriteriaVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Tambah SubKriteria";
}

<body>
    <main>
        <section class="hero-section d-flex justify-content-center align-items-center" id="section_1">
            <div class="container">
                <div class="row">

                    <div class="col-lg-8 col-12 mx-auto">

                        <form method="post" class="custom-form mt-4 mb-lg-0 mb-5">
                            <div class="row p-3 border">

                                @if (Model.Subkriteria.Id != 0)
                                {
                                    title = "Edit SubKriteria";
                                }

                                <input type="hidden" asp-for="@Model.Subkriteria.Id" />

                                <div asp-validation-summary="ModelOnly"></div>

                                <div class="col-12 border-bottom">
                                    <h2 style="color:white">@title</h2>
                                </div>

                                <div class="form-group row" style="padding-bottom:20px; padding-top:20px">
                                    <div class="col-4">
                                        Nama Kriteria
                                    </div>
                                    <div class="col-8">

                                        <select style="text-align:center" asp-for="@Model.Subkriteria.Kriteria" asp-items="@Model.ListKriteria" class="form-select border-0 shadow">
                                            <option disabled selected>Pilih Kriteria</option>
                                        </select>

                                        <span asp-validation-for="Subkriteria.Kriteria" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-4">
                                        <label asp-for="Subkriteria.Pilihan"></label>
                                    </div>
                                    <div class="col-8">
                                        <input style="text-align:center" asp-for="Subkriteria.Pilihan " class="form-control" />
                                        <span asp-validation-for="Subkriteria.Pilihan" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-4">
                                        <label asp-for="Subkriteria.Nilai"></label>
                                    </div>
                                    <div class="col-8">
                                        <input style="text-align:center" asp-for="Subkriteria.Nilai " class="form-control" />
                                        <span asp-validation-for="Subkriteria.Nilai" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-8 offset-4">
                                        @if (Model.Subkriteria.Id != 0)
                                        {
                                            <partial name="_EditAndBackToListButton" model="Model.Subkriteria.Id" />
                                        }
                                        else
                                        {
                                            <partial name="_CreateAndBackToListButton" />
                                        }
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </section>
    </main>
</body>