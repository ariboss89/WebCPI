@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "List SubKriteria";
}

<section>
    <main style="margin-top:100px">
        <div class="row">
            <div class="col-6">
                <h2 style="color: var(--primary-color)">SubKriteria List </h2>
            </div>
            <div class="col-6 text-end">
                <a class="btn" style="background-color: var(--secondary-color)" asp-action="Upsert"> <i class="fas fa-plus"></i> &nbsp; Tambah SubKriteria</a>
            </div>
        </div>

        <br />
        <div class="p-4 border rounded" style="text-align:center;">
            <table id="tblData" class="table table-striped table-bordered" style="width:100%; padding-top:10px">
                <thead class="thead-dark">
                    <tr style="background-color: var(--secondary-color);">

                        <th class="text-center">Id</th>
                        <th class="text-center">Nama Kriteria</th>
                        <th class="text-center">Nama SubKriteria</th>
                        <th class="text-center">Nilai SubKriteria</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
            </table>
        </div>
    </main>
</section>

@section Scripts{
    <script src="~/js/subkriteria.js"></script>
}
